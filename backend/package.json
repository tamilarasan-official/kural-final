{
    "name": "backend",
    "version": "1.0.0",
    "description": "Production-grade Node.js backend API",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "start:dev": "set NODE_ENV=development&& node src/server.js",
        "start:prod": "set NODE_ENV=production&& node src/server.js",
        "dev": "set NODE_ENV=development&& nodemon src/server.js",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch --detectOpenHandles",
        "test:coverage": "jest --coverage --detectOpenHandles",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write \"src/**/*.js\"",
        "format:check": "prettier --check \"src/**/*.js\"",
        "migrate": "node scripts/migrate.js",
        "seed": "node scripts/seed.js",
        "build": "npm run lint && npm run test",
        "docker:build": "docker build -t backend .",
        "docker:run": "docker run -p 5000:5000 backend",
        "logs": "pm2 logs",
        "restart": "pm2 restart all",
        "stop": "pm2 stop all",
        "monitor": "pm2 monit"
    },
    "keywords": [
        "nodejs",
        "express",
        "api",
        "backend",
        "rest",
        "mongodb"
    ],
    "author": "Your Name <your.email@example.com>",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.12.2",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "hpp": "^0.2.3",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.20.0",
        "mongoose": "^8.18.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "react-native-svg": "^15.13.0",
        "react-native-vector-icons": "^10.3.0",
        "sharp": "^0.32.6",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "validator": "^13.11.0",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.6",
        "eslint": "^8.52.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/server.js",
            "!src/database/connection.js"
        ],
        "testMatch": [
            "**/tests/**/*.test.js",
            "**/tests/**/*.spec.js"
        ]
    },
    "directories": {
        "doc": "docs"
    },
    "type": "commonjs",
    "prettier": {
        "trailingComma": "none",
        "semi": true,
        "singleQuote": true
    }
}